package Projeto_Estoque.Main;

import java.util.Scanner;
import java.util.Locale;


public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        Locale.setDefault(Locale.US);
        

        int escolha = sc.nextInt();

        switch (escolha) {
            case 1:
                System.out.println("Selecione o tipo do produto que voce deseja adicionar:");
                System.out.println("1- Comida");
                System.out.println("2- Eletronico");
                System.out.println("3- Roupa");
                
                int tipoDoProduto = sc.nextInt();
                switch (tipoDoProduto) {
                    case 1:
                        System.out.println("Digite o nome da comida a ser adicionada");
                        = sc.next();
                        System.out.println("Digite o id da comida a ser adicionada");
                        = sc.nextInt();
                        System.out.println("Digite a quantidade de comida a ser adicionada");
                        = sc.nextInt();
                        System.out.println("Digite o preco da comida a ser adicionada");
                        = sc.nextDouble();

                        break;
                
                    case 2:
                        System.out.println("Digite o nome do Eletronico a ser adicionada");
                        = sc.next();
                        System.out.println("Digite o id do Eletronico a ser adicionada");
                        = sc.nextInt();
                        System.out.println("Digite a quantidade de Eletronicos a ser adicionada");
                        = sc.nextInt();
                        System.out.println("Digite o preco do Eletronico a ser adicionada");
                        = sc.nextDouble();

                        break;
                
                    case 3:
                        System.out.println("Digite o nome da Roupa a ser adicionada");
                        = sc.next();
                        System.out.println("Digite o id da Roupa a ser adicionada");
                        = sc.nextInt();
                        System.out.println("Digite a quantidade de Roupa a ser adicionada");
                        = sc.nextInt();
                        System.out.println("Digite o preco da Roupa a ser adicionada");
                        = sc.nextDouble();

                        break;
                
                    default:
                        break;
                }
                break;
        
            default:
                break;

                case 3: // case de consultar o estoque
                System.out.println("Selecione o tipo do produto que voce deseja consultar o estoque:");
                System.out.println("1- Comida");
                System.out.println("2- Eletronico");
                System.out.println("3- Roupa");
                
                int tipoDoProduto = sc.nextInt();
                switch (tipoDoProduto) { // switch de qual tipo de produto ira consultar

                    case 1: // case Comida
                    System.out.println("Digite o nome da comida a ser adicionada");
                    = sc.next();
                    System.out.println("Deseja 1-adicionar ou 2-remover do estoque?");
                    int consultarOpcao = sc.nextInt();

                    switch (consultarOpcao) { // switch de adicionar ou remover
                        case 1:// adicionar 
                        System.out.println("Digite a quantidade de comida a ser adicionada");
                        = sc.nextInt();

                        System.out.println("A quantidade de comida no estoque apos adicionar é:" .quantidade);
                            break;
                        case 2: // remover
                        System.out.println("Digite a quantidade de comida a ser removida");
                            = sc.nextInt();
                        System.out.println("A quantidade de comida no estoque apos remover é:" .quantidade);
                    break;
                    }
                    
                    break;
                
                    case 2: //case eletronico
                    System.out.println("Digite o nome do eletronico a ser adicionado");
                    = sc.next();

                    System.out.println("Deseja 1-adicionar ou 2-remover do estoque?");
                    int consultarOpcao = sc.nextInt();

                    switch (consultarOpcao) { // switch de adicionar ou remover
                        case 1:// adicionar
                        System.out.println("Digite a quantidade de eletronicos a serem adicionados");
                        = sc.nextInt();

                        System.out.println("A quantidade de eletronicos no estoque apos adicionar é:" .quantidade);
                            break;

                        case 2: //remover
                        System.out.println("Digiquantidade de eletronicos a serem removidos");
                            = sc.nextInt();
                        System.out.println("A quantidade de comida no estoque apost remover é:" .quantidade);
                                break;
                        
                    }
                    case 3: // case roupas
                    System.out.println("Digite o nome da roupa a ser adicionada");
                    = sc.next();

                    System.out.println("Deseja 1-adicionar ou 2-remover do estoque?");
                    int consultarOpcao = sc.nextInt();

                    switch (consultarOpcao) { // switch de adicionar ou remover
                        case 1:// adicionar
                        System.out.println("Digite a quantidade de roupas a serem adicionadas");
                        = sc.nextInt();

                        System.out.println("A quantidade de roupas no estoque apos adicionar é:" .quantidade);
                            break;

                        case 2: //remover
                        System.out.println("Digite a quantidade de roupas a serem removidas");
                            = sc.nextInt();
                        System.out.println("A quantidade de roupas no estoque apos remover é:" .quantidade);
                                break;
                        
                    }
                }


        }

    }
}

