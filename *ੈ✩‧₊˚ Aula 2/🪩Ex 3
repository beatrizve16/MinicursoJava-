package aulaa3;
import java.util.Scanner;
public class Main2 {
	public static void main(String[] args) {
		int x;
		System.out.println("Digite um numero inteiro: ");
		Scanner sc = new Scanner(System.in);
		x = sc.nextInt();
		if ( x % 2 == 0) {
			System.out.printf("%d e par" , x);
			
		}else {
			
			System.out.printf(" %d e impar " , x);
			
		}
	}
}



