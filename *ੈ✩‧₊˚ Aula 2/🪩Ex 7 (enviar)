package aulaa3;
import java.util.Scanner;
public class Main6enviar {
	public static void main(String[] args) {
       int oper;
       double num1, num2, add, sub, mult, div;
      
       System.out.println("Digite a operacao q deseja realizar: \n1-Soma \n2-Subtracao \n3-Multiplicacao \n4-Divisao");
       Scanner sc = new Scanner(System.in);
       oper = sc.nextInt ();
      
       System.out.println("Digite os dois numeros");
       Scanner sc2 = new Scanner(System.in);
       num1 = sc2.nextDouble ();
       num2 = sc2.nextDouble ();
add = num1+num2;
sub = num1-num2;
mult= num1*num2;
div=num1/num2;
      
      switch (oper){
          case(1):
               System.out.println(add);
           break;
           case(2):
               System.out.println(sub);
           break;
           case(3):
               System.out.println(mult);
           break;
           case(4):
               System.out.println(div);
           break;
      }
      
	}
}


