
import java.util.Scanner;


public class vetor3 {
    

    public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);

        System.out.print(" Quantos numeros ira digitar: ");
		int qtd = sc.nextInt();
		double [] vetor = new double[qtd];

		double somaMedia = 0;
        double media=0;
        
		
		for (int i = 0; i < qtd; i++) {
			System.out.print("Digite um numero: ");
			vetor[i] = sc.nextDouble();
			somaMedia += vetor[i];
		}

        media= somaMedia/qtd;

        System.out.printf(" A media e : %.2f " , media );
        System.out.printf(" A soma e : %.2f " , somaMedia );



}
}
