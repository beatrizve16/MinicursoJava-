import java.util.Scanner;



public class vetor1 {
    
    public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);

        System.out.print(" quantas alturas : ");
		int qtd = sc.nextInt();
		double [] vetor = new double[qtd];

		double somaMedia = 0;
        double media=0;
        
		
		for (int i = 0; i < qtd; i++) {
			System.out.print("Digite a altura: ");
			vetor[i] = sc.nextDouble();
			somaMedia += vetor[i];
		}

        media= somaMedia/qtd;

        System.out.printf(" A altura media e : %.2f " , media );


}
}
