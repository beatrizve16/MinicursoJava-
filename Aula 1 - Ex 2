package aula2;
import java.util.Scanner;
public class Main2 {
	public static void main(String[] args) {
		double num, horas, valor, salario;
		
		System.out.println("Digite o numero de funcionarios, seu numero de horas e o valor que recebe por hora:");
		Scanner sc = new Scanner(System.in);
		num = sc.nextDouble ();
		horas = sc.nextDouble ();
		valor = sc.nextDouble ();
		
		salario = horas * valor ;
		
		System.out.println("Funcionarios =" + num);
		System.out.printf("Salario = U$%.2f" , salario);
		
	}
}
